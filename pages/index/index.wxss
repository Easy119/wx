/**index.wxss**/

.content {
  width: 100%;
  height: 100vh;
  background-image: url("http://activity.ziinlife.com/wx/index/index_bg.jpg");
  background-repeat: no-repeat;
  background-position: top center;
  background-size: 100% 1206rpx;
  position: relative;
}


/* gif */

.index_gif {
  position: absolute;
  left: 0;
  top: 500rpx;
  width: 750rpx;
  height: 400rpx;
}

.index_gif .bg_gif {
  margin: 0 auto;
  display: block;
  width: 400rpx;
  height: 300rpx;
}

.index_play {
  position: absolute;
  left: 0;
  bottom: 150rpx;
  width: 100%;
  height: 82rpx;
}

.index_play .bg_play {
  display: block;
  width: 195rpx;
  height: 82rpx;
  margin: 0 auto;
}
