/* 滚动 组件 */

.footer .scroll_view {
  width: 100%;
  height: 260rpx;
}

.scroll_view .scroll_box {
  width: 100%;
  height: 260rpx;
  /* margin-top: 110rpx; */
  white-space: nowrap;
}

.scroll_view .scroll_box .scroll_box_item {
  max-width: 240rpx;
  height: 260rpx;
  padding-top: 110rpx;
  display: inline-block;
  margin: 30rpx 0 30rpx 50rpx;
  position: relative;
}

/* 滚动的图片 */

.scroll_box_item .more_item {
  position: absolute;
  width: 165rpx;
  height: 90rpx;
  top: -30rpx;
  left: -40rpx;
  z-index: 999;
  background-color: #fff;
}

.scroll_box_item .more_item_bg {
  width: 120rpx;
  height: 160rpx;
  background-color: rgba(255, 255, 255, 0.6);
  position: absolute;
  left: -15rpx;
  top: 80rpx;
}

.scroll_box_item .more_item .more_item_img {
  margin: 15rpx 0;
  margin-left: 15rpx;
}

.scroll_box_item .more_item_bg>image {
  display: block;
  /* width: 120rpx;
  height: 160rpx; */
}

.scroll_box_item .more_item_7 {
  position: absolute;
  width: 350rpx;
  height: 90rpx;
  top: -30rpx;
  left: -90rpx;
  z-index: 999;
  background-color: #fff;
  float: left;
}

.scroll_box_item .more_item_bg_7 {
  width: 210rpx;
  height: 160rpx;
  background-color: rgba(255, 255, 255, 0.6);
  position: absolute;
  left: -15rpx;
  top: 80rpx;
}

.more_item_7 .more_item_img {
  margin: 5rpx 15rpx;
}

.scroll_box_item .scroll_img {
  display: block;
  margin: 0 auto;
}

/* 底部小组件 */

.footer .footer_small_view {
  width: 100%;
  height: 50rpx;
  background-color: #c6c6c6;
}

