/* pages/move/move.wxss */

/* content */

.content {
  width: 100%;
  height: 100vh;
  position: relative;
}

/* 背景图片 */

.content .bg_img_view {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  z-index: -100;
}

.bg_img_view .bg_img {
  display: block;
  width: 100%;
  height: 100vh;
}

/* 固定区域 */

.content .fixed_view {
  width: 600rpx;
  height: 200rpx;
  z-index: 100px;
  position: absolute;
  left: 50rpx;
}

.fixed_view .fixed_view_img {
  width: 600rpx;
  height: 200rpx;
}

/* 灰色的 图片 */

/* 移动区域 */

.content .move_view {
  width: 100%;
  height: 100vh;
  z-index: 200px;
}


/* next */

.content .next {
  width: 100%;
  height: 75rpx;
  position: absolute;
  bottom: 200rpx;
  right: 0;
  color: #fff;
  z-index: 400
}
#answer{
  display: block;
  width: 152rpx;
  height: 71rpx;
  margin: 0 auto;
}
/* footer */

.footer {
  position: fixed;
  z-index: 200;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 260rpx;
}
